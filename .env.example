# Окружение (development | production)
NODE_ENV=development

# Порт на котором запускается сервер
PORT=3000

# PostgreSQL connection string
# Формат: postgresql://username:password@host:port/database
# Пример для локальной разработки:
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hh_auto_respond

# HH.ru OAuth Credentials
# Получить можно здесь: https://dev.hh.ru/admin
# ВАЖНО: Не коммитить реальные credentials в git!

# Client ID вашего приложения в HH.ru
HH_CLIENT_ID=your_client_id_here

# Client Secret (держите в секрете!)
HH_CLIENT_SECRET=your_client_secret_here

# Redirect URI для OAuth callback
# Должен совпадать с настройками в HH.ru приложении
# Пример для локальной разработки: http://localhost:3000/api/auth/hh/callback
# Пример для production: https://yourdomain.com/api/auth/hh/callback
HH_REDIRECT_URI=http://localhost:3000/api/auth/hh/callback

{
  "name": "workwolk-analytics",
  "version": "0.2.0",
  "private": true,
  "description": "WorkWolk - агрегатор данных IT рынка для аналитики",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev:scraper": "bun run --cwd apps/scraper dev",
    "dev:web": "bun run --cwd apps/web dev",
    "build:web": "bun run --cwd apps/web build",
    "db:push": "bun run --cwd apps/scraper db:push",
    "db:studio": "bun run --cwd apps/scraper db:studio",
    "test": "bun run --cwd apps/scraper test",
    "typecheck": "bun run --cwd apps/scraper typecheck"
  }
}
